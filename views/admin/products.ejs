<%- include ('../parts/header')%>






<div class="container mt-3">
    <h1 class="page-title text-center">Productos</h1>
<a href="/admin/products/addProduct" class="btn btn-primary">Agregar un nuevo producto</a>
<br>

  

<% if (cantidad > 0) { %>
  <table class="table table-striped alignmiddle mt-3">
    <thead>
            <tr class="home">
                <th>Producto</th>
                <th>Precio</th>
                <th>Imagen del Producto</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <% todosLosProductos.forEach(function(product){ %>
            <tr>
                <td><%= product.nombre %></td>
                <td>$<%= parseFloat(product.precio).toFixed(2) %></td>
              
                <td>
                    <% if (product.imagen == "") { %>
                    <img id="noimage" src="/images/noimage.png" >
                    <% } else {%>
                    <img id="noimage" style="height:150px" src="<%= product.imagen %>">
                    <% }%>
                </td>
                <td><a href="/admin/products/editProduct/<%= product.id %>"><i class="fas fa-edit"></i>&nbspEditar</a></td>
                <td><a class="confirmDeletion" href="/admin/products/deleteProduct/<%= product.id %>"><i class="fas fa-trash-alt"></i>&nbspEliminar</a></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    <% } else {%>
    <h3 class="text-center">No hay productos.</h3>
    <% }%>



  </div>





