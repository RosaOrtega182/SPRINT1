<%- include ('../parts/header')%>



<div class="container mt-3">
    <h1 class="text-center">Registrar producto</h1>

<a href="/admin/products" class="btn btn-primary">Regresar a ver todos los productos</a>
<br>

    <form method="POST" class="mt-3" action="/admin/products/addProduct">

        <div class="form-group">
            <label for="" class="fw-bold">Nombre del Producto</label>
            <input type="text" class="form-control" name="nombre" placeholder="Nombre">
        </div>

        <div class="form-group mt-3">
            <label for="" class="fw-bold">Descripci√≥n</label>
            <textarea class="form-control" name=descripcion  rows="3" placeholder="Descripcion"></textarea>
           
                      
        </div>

        <div class="form-group mt-3">
            <label for="" class="fw-bold">Precio</label>
            <input type="text" class="form-control" name="precio"  placeholder="Nombre">
        </div>

        <div class="form-group mt-3">
            <label for="" class="fw-bold">Url de la Imagen</label>
            <input type="text" class="form-control" name="imagen"  placeholder="Imagen">
        </div>

        
        <div class="form-group mt-3">
            <label for="" class="fw-bold">Categorias</label>
            <select name="categoria" class="form-control">
                <% categorias.forEach(function(cat){ %>
                    <option value="<%= cat.id %>"><%= cat.nombre %></option>
                <% }); %>
            </select>
        </div>

       

       
        <button type="submit" class="btn btn-primary mt-3">Agregar</button>
      </form>
  </div>





