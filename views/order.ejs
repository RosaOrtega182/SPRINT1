<%- include ('./parts/header')%>




<div class="container  mt-3">
        
      
<h1 class="text-center">Completar compra</h1>

<br>

<form class= "row -4" method="post" action="/checkout/buy">

    <div class="col-6">
        <div class="form-group mt-3">
            <label class="fw-bold">Nombre</label>
            <input type="text" name="nombre" class="form-control" value="<%= nombre %> <%= apellido %>" placeholder="Nombre">
        </div>
    </div>

    <div class="col-12">
        <div class="form-group mt-3">
            <label class="fw-bold">Dirección</label>
            <input type="text" name="direccion" class="form-control" placeholder="Dirección">
        </div>
    </div>

    

    

    <div class="col-1">
    <button type="submit" class="btn btn-primary mt-3">Comprar</button>
    </div>
</form>





<div class="col-1 mt-3">
    <form class="pp" action="https://www.paypal.com/cgi-bin/webscr" method="post">
        <input type="hidden" name="cmd" value="_cart">
        <input type="hidden" name="upload" value="1">
        <input type="hidden" name="business" value="seller@dezignerfotos.com">
        <% var x = 1; %>
        <%let total=0;%>
        <% cart.forEach(function (product){%>
        <%let subtotal=product.cuantity*product.price%>
        <% total=total+subtotal%>
           
            <input type="hidden" name="item_name_<%= x %>" value="<%= product.title %>">
            <input type="hidden" name="amount_<%= x %>" value="<%= product.price %>">
            <input type="hidden" name="quantity_<%= x %>" value="<%= product.cuantity %>">
            <% x++ %>
        <% }); %>
        <input type="hidden" name="currency_code" value="MXN">
        <input type="hidden" name="amount" value="<%= total %>">
        <input type="image" src="http://www.paypal.com/en_US/i/btn/x-click-but01.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
        </form>
</div>
  
      </div>
       



        
  

     









