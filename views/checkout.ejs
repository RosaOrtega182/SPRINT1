<%- include ('parts/header')%>


     


<% if (typeof cart !== "undefined") {%>
  <div class="container ">
    <h1 class="mt-2">Tú Carrito</h1>
    <hr>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Producto</th>
          <th scope="col"></th>
          <th scope="col">Precio</th>
          <th scope="col">Cantidad</th>
          <th scope="col"></th>
          <th scope="col">Subtotal</th>
        </tr>
      </thead>
  
  
   
  
  
      <tbody>
        <%let total=0;%>
        <% cart.forEach(function (product){%>
        <%let subtotal=product.cuantity*product.price%>
        <% total=total+subtotal%>
      <tr>
       
        <td><img src="<%= product.image%>" ></td>
        <td  class="align-middle"><%= product.title%></td>
        <td  class="align-middle">$<%= product.price%></td>
        <td  class="align-middle text-center"><%= product.cuantity%></td>
        <td  class="align-middle">
          <a href="checkout/update/<%= product.id%>?action=add">+</a>&nbsp;
          <a href="checkout/update/<%= product.id%>?action=remove">-</a>&nbsp;
          <a href="checkout/update/<%= product.id%>?action=clear">Limpir</a>&nbsp;
        </td>
        <td  class="align-middle">$<%=parseFloat(subtotal).toFixed(2)%></td>
      
      </tr>  
    
  
          <% }); %>

          <tr>
            <td colspan="5" align="right"><b>Total:</b></td>
            <td>$<%= parseFloat(total).toFixed(2)%></td>
          </tr>

          <tr>
            <td colspan="5" align="right">
              <a class="btn btn-danger" href="#">Limpiar Carro</a>
             
            </td>
            <td >
            
              <a class="btn btn-primary buynow" href="#">Pagar</a>
            </td>
          </tr>
      
      </tbody>
    </table>
  
  
  
  
  
  
  
  </div>
  

<% }else {%> 
  <br>
  <h1 class="text-center">El carrito está vacio tecler!!</h1>
<% }%>





